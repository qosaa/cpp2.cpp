#include <iostream>
using namespace std;

struct Aluno{
    string nome;
    int idade;
    int anoEscolar;
    float nota;
};

int main(){
    const int maximo = 20;
    Aluno aluno[maximo];
    int numAluno;
    
    cout << "Quantos alunos queres registrar? max " << maximo << ": " << endl;
    cin >> numAluno;
    if(numAluno > maximo) numAluno = maximo;
    
    for(int i = 0; i < numAluno; i++){
        cout << "-----------------------------" << endl;
        cout << "Dados para o aluno " << i + 1 << ": " << endl;
        cout << "Nome: ";
        cin >> aluno[i].nome;
        cout << "Idade: ";
        cin >> aluno[i].idade;
        cout << "Ano da escola: ";
        cin >> aluno[i].anoEscolar;
        cout << "Nota: ";
        cin >> aluno[i].nota;
    }
    
    float soma = 0;
    for(int i = 0; i < numAluno; i++){
        soma += aluno[i].nota;
    }
    cout << "MÃ©dia: " << (soma / numAluno) << endl;
    cout << "-----------------------------" << endl;
    
    for(int i = 0; i < numAluno; i++){
        cout << "Nome: " << aluno[i].nome << endl;
        cout << "Idade: " << aluno[i].idade << endl;
        cout << "Ano da escola: " << aluno[i].anoEscolar << endl;
        cout << "Nota: " << aluno[i].nota << endl;
        cout << "-----------------------------" << endl;
    }
return 0;
}
